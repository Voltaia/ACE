<UserControl x:Class="ACE.VideoContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ACE"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="150">
    <Button x:Name="Button" Margin="0,0,0,6" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}" HorizontalContentAlignment="Stretch">
        <DockPanel>
            <MediaElement x:Name="Preview" Height="100" DockPanel.Dock="Top" LoadedBehavior="Manual"/>
            <Label x:Name="Label" Content="Example Video" Foreground="{StaticResource TextBrush}"/>
        </DockPanel>
    </Button>
</UserControl>
